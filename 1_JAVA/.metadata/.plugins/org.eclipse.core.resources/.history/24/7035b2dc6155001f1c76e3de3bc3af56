package test;

import java.util.Scanner;

public class Main {
	
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int a= sc.nextInt();
		int b=sc.nextInt();
		int c=sc.nextInt();
		int mx=0;
		mx =Math.max(Math.max(a, b),c);
		while(true) {
			if(a+b+c<mx*2) {
				a-=1;
				mx-=1;
			}else {
				System.out.println(a+b+c);
			}
		}
	}
}
