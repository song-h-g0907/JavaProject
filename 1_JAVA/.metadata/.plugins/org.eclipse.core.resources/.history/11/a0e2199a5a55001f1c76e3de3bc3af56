package test;

import java.util.Scanner;

public class Main {
	
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int a= sc.nextInt();
		int mxx=0;
		int mnx=0;
		int mxy=0;
		int mny=0;
		for (int i = 0; i < a; i++) {
			int x= sc.nextInt();
			int y= sc.nextInt();
			if(x>mxx) {
				mxx=x;
			}
			if(x<mnx) {
				mnx=x;
			}
			if(y>mxy) {
				mxy=y;
			}
			if(y<mny) {
				mny=y;
			}
		}
		
		System.out.println((mxx-mnx)*(mxy-mny));
		System.out.println(mxx);
		System.out.println(mxy);
		System.out.println(mnx);
		System.out.println(mny);
	}
}
